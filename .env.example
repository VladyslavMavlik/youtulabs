# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MAX_TOKENS=32000
TIMEOUT_MS=120000

# Voice Synthesis API Configuration
VOICE_API_URL=https://voiceapi.csv666.ru
VOICE_API_KEY=your_voice_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Uncomment and set if Redis requires auth

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Get this from Supabase Dashboard -> Project Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Concurrency Limits
CONCURRENCY_SHORT=2
CONCURRENCY_LONG=1

# Logging
LOG_LEVEL=info

# Quality Thresholds
MAX_BIGRAM_RATE=3.0
LENGTH_TOLERANCE_PERCENT=10

# Polish Mode (off|conditional|always)
POLISH_MODE=conditional
REPETITION_MAX_BIGRAMS=3.2
EXTREME_REPETITION_FACTOR=10
HOOK_ENFORCE=false

# Quiet Noir / Mature Romance Settings
MOTIF_MAX_PER_10K=3
MID_COMPRESSION_PERCENT=6
DIALOGUE_RATIO_MIN=0.28
VISIBLE_PRICE_REQUIRED=false
CHARACTER_ANCHORS_REQUIRED=false

# Style Policy Settings (show-don't-tell, pacing, dialogue)
# on = strict quality checks, off = disabled, conditional = genre-aware
STYLE_POLICY=conditional
SENT_LEN_MAX=20
RQUESTIONS_PER_SCENE_MAX=2
DIALOGUE_TURN_MAX_EXCEPTIONS=10
